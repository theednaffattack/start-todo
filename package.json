{
  "name": "start-todo",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "dotenv -e .env.local -- vite dev --host --port 8000",
    "build": "vite build",
    "serve": "vite preview",
    "test": "vitest run",
    "lint": "eslint",
    "format": "prettier",
    "check": "prettier --write . && eslint --fix",
    "db:clean": "rimraf ./src/db/db_data",
    "db:local": "dotenv -e .env.local pnpm db:clean && docker-compose --env-file .env.local --project-directory ./ -f ./src/db/postgres-local.yml up -d",
    "db:down": "dotenv -e .env.local docker compose --env-file .env.local -v -f ./src/db/postgres-local.yml down",
    "db:generate": "dotenv -e .env.local drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "dotenv -e .env.local drizzle-kit migrate --config=drizzle.config.ts",
    "db:push": "dotenv -e .env.local drizzle-kit push --config=drizzle.config.ts",
    "db:pull": "dotenv -e .env.local drizzle-kit pull --config=drizzle.config.ts",
    "db:studio": "dotenv -e .env.local drizzle-kit --config=drizzle.config.ts studio"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/react-devtools": "^0.7.0",
    "@tanstack/react-router": "^1.132.0",
    "@tanstack/react-router-devtools": "^1.132.0",
    "@tanstack/react-router-ssr-query": "^1.131.7",
    "@tanstack/react-start": "^1.132.0",
    "@tanstack/router-plugin": "^1.132.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.30.0",
    "drizzle-orm": "^0.39.0",
    "lucide-react": "^0.544.0",
    "next-themes": "^0.4.6",
    "nitro": "latest",
    "pg": "^8.11.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.6",
    "tw-animate-css": "^1.3.6",
    "vite-tsconfig-paths": "^5.1.4",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@tanstack/devtools-vite": "^0.3.11",
    "@tanstack/eslint-config": "^0.3.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.10.0",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.0.4",
    "dotenv": "^16.0.0",
    "dotenv-cli": "^11.0.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.1.2",
    "tsx": "^4.0.0",
    "typescript": "^5.7.2",
    "vite": "^7.1.7",
    "vitest": "^3.0.5",
    "web-vitals": "^5.1.0"
  }
}
